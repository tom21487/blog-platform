extends layout

block content
  center #[h2 Create new post]
  form(method='POST' action='' enctype="multipart/form-data" style="margin-left: 25%")
  
    div.form-group
      | type: 
      select(name='type')
        option project
        option blog

    div.form-group
      | title (en): 
      input(name='titleEn' type='text' autocomplete='off' required)
      
    div.form-group
      | title (cn):
      input(name='titleCn' type='text' autocomplete='off' required)

    div.form-group
      | tags: 
      each tag, index in tags
        input(name='tags[]' type='checkbox' value=tag.title checked=tag.checked)
        | #{tag.title}
        if index < tags.length - 1
          | ,
      | 
      a(href='/tags') (manage tags)
    
    div.form-group
      | blocks:
      br
      div#all-blocks
      button(type='button' onclick="addBlock()") add block
    button(type='submit' style="display: block") submit

  script(src='/javascripts/block.js')
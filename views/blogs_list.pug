extends layout

block content
  form#tag-filter(method='GET' action='')
    | Filter by tag:
    button.tag(type='button' onclick='location.href="/blog"') all tags
    each tag in tags
      button.tag(type='submit' name='tag' value=tag.title) #{tag.title}
    else
      p There are no tags

  div#blog-container
    each blog in blogs
      div.box
        strong.title #[p #{blog.title}]
        div.tagspace
          each tag in blog.tags
            span.tag #{tag}
        img.cover-image(src=blog.coverImage)
        p.description
          span #{blog.description}
          | 
          a(href=blog.url) More.
    else
      p There are no blogs matching your filter
    
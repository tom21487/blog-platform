extends layout

block content
  -
    text = {
      welcome: [`Hello ${username}`, `您好 ${username}`],
      logout: ["Log out", "注销账户"],
      control: ["Control panel", "控制面板"]
    };
  p#about-text
    div.form-div
      form.form-inner(method='POST' action='')
        span #{text.welcome[lang]}
        a(href='/'+language+'/user/control/') #{text.control[lang]}
        button(type='submit') #{text.logout[lang]}
        input(type='hidden' name='requestMode' value='logout')
